<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>controller.RegistroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiaPassServlet</servlet-name>
        <servlet-class>controller.CambiaPassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarMensajeListUsers</servlet-name>
        <servlet-class>controller.EnviarMensajeListUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarMensaje</servlet-name>
        <servlet-class>controller.EnviarMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarMensajes</servlet-name>
        <servlet-class>controller.ConsultarMensajes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BandejaEntrada</servlet-name>
        <servlet-class>controller.BandejaEntrada</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LeerMensajes</servlet-name>
        <servlet-class>controller.LeerMensajes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MuestraMensaje</servlet-name>
        <servlet-class>controller.MuestraMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MensajesEnviados</servlet-name>
        <servlet-class>controller.MensajesEnviados</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarUsuarios</servlet-name>
        <servlet-class>controller.ListarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaUsuario</servlet-name>
        <servlet-class>controller.EliminaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TodosMensajes</servlet-name>
        <servlet-class>controller.TodosMensajes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UltimoInicio</servlet-name>
        <servlet-class>controller.UltimoInicio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RankingUsuarios</servlet-name>
        <servlet-class>controller.RankingUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/RegistroServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiaPassServlet</servlet-name>
        <url-pattern>/CambiaPassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarMensajeListUsers</servlet-name>
        <url-pattern>/EnviarMensajeListUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarMensaje</servlet-name>
        <url-pattern>/EnviarMensaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarMensajes</servlet-name>
        <url-pattern>/ConsultarMensajes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BandejaEntrada</servlet-name>
        <url-pattern>/BandejaEntrada</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeerMensajes</servlet-name>
        <url-pattern>/LeerMensajes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MuestraMensaje</servlet-name>
        <url-pattern>/MuestraMensaje/id/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MensajesEnviados</servlet-name>
        <url-pattern>/MensajesEnviados</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarUsuarios</servlet-name>
        <url-pattern>/ListarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaUsuario</servlet-name>
        <url-pattern>/EliminaUsuario/username/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TodosMensajes</servlet-name>
        <url-pattern>/TodosMensajes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UltimoInicio</servlet-name>
        <url-pattern>/UltimoInicio/username/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RankingUsuarios</servlet-name>
        <url-pattern>/RankingUsuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
